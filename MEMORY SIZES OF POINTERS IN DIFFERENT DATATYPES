#include<bits/stdc++.h>
using namespace std;

struct Rectangle
{
	int l;
	int b;
};
int main()
{
	int *p1;
	char *p2;
	double *p3;
	float *p4;
	struct Rectangle *p5;

	cout<<sizeof(p1)<<endl;
	cout<<sizeof(p2)<<endl;
	cout<<sizeof(p3)<<endl;
	cout<<sizeof(p4)<<endl;
	cout<<sizeof(p5)<<endl;

	return 0;
}

OUTPUT
8
8
8
8
8

NOTE:- POINTER TAKES EXACTLY SAME SIZE OF MEMORY FOR ANY DATATYPE

